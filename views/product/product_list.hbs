
<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title" >{{{data.title}}}
                </h2>
                <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                <div class="page-breadcrumb">
                    <nav aria-labeal="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/" class="breadcrumb-link">Trang chính</a></li>
                            <li class="breadcrumb-item"><a href="/san-pham" class="breadcrumb-link">Sản phẩm</a></li>
                        </ol>
                    </nav>
                </div>

            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic table  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header" style="display: inline">
                <h2 style="float:left">{{{data.title}}}</h2>
                    <button onclick="window.location.href='/san-pham/them-san-pham'" class="add-product btn btn-primary bg-green">Thêm sản phẩm</button>
            </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                            <tr>
                                <th>Số thứ tự</th>
                                <th>Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Thương hiệu</th>
                                <th>Danh mục</th>
                                <th>Tồn kho</th>
                                <th>Giá</th>
                                <th>Cài đặt</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each data.products}}
                                <tr>
                                    <td><strong>{{this.index}}</strong></td>
                                    <td>{{this.id}}</td>
                                    <td>{{this.name}}</td>
                                    <td><a href="/san-pham?thuonghieu={{this.brand}}">{{this.brand}}</a></td>
                                    <td><a href="/san-pham?danhmuc={{this.category}}">{{this.category}} - {{this.categoryName}}</a></td>
                                    <td>{{this.count}}</td>
                                    <td>{{this.price}}</td>
                                    <td>
                                        <button onclick="window.location.href='/san-pham/xem-chi-tiet-{{this.category}}-{{this.id}}'" data-toggle="tooltip" title="" class="pd-setting-ed yellow" data-original-title="Xem sản phẩm"><i class="fa fa-info-circle" aria-hidden="true"></i></button>
                                        <button onclick="window.location.href='/san-pham/sua-thong-tin-{{this.category}}-{{this.id}}'" data-toggle="tooltip" title="" class="pd-setting-ed blue" data-original-title="Sửa thông tin"><i class="fa fa-pen-square" aria-hidden="true"></i></button>
                                        <button onclick="window.location.href='/san-pham/xac-nhan-xoa-{{this.category}}-{{this.id}}'" data-toggle="tooltip" title="" class="pd-setting-ed red" data-original-title="Xóa sản phẩm"><i class="fa fa-trash-alt" aria-hidden="true"></i></button>

                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>