
<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Danh mục</h2>
                <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                <div class="page-breadcrumb">
                    <nav aria-labeal="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/" class="breadcrumb-link">Trang chính</a></li>
                            <li class="breadcrumb-item"><a href="/danh-muc" class="breadcrumb-link">Danh mục</a></li>
                        </ol>
                    </nav>
                </div>

            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic table  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header" style="display: inline">
                    <h2 style="float:left">Danh mục</h2>
                    <button onclick="window.location.href='/danh-muc/them'" class="add-product btn btn-primary bg-green">Thêm danh mục</button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                            <tr>
                                <th>Số thứ tự</th>
                                <th>ID danh mục</th>
                                <th>Mã danh mục</th>
                                <th>Tên danh mục</th>
                                <th>Cài đặt</th>
                            </tr>
                            </thead>
                            <a>
                            {{#each data.categories}}
                                <tr>
                                    <td><strong>{{this.index}}</strong></td>
                                    <td>{{this.id}}</td>
                                    <td><a href="/san-pham?danhmuc={{this.category}}">{{this.category}}</a></td>
                                    <td><a href="/san-pham?danhmuc={{this.category}}">{{this.categoryName}}</a></td>
                                    <td>
                                        <button onclick="window.location.href='/san-pham?danhmuc={{this.category}}'" data-toggle="tooltip" title="" class="pd-setting-ed yellow" data-original-title="Xem sản phẩm thuộc danh mục"><i class="fa fa-eye" aria-hidden="true"></i></button>
                                        <button onclick="window.location.href='/danh-muc/sua-thong-tin-{{this.category}}'" data-toggle="tooltip" title="" class="pd-setting-ed blue" data-original-title="Sửa thông tin"><i class="fa fa-pen-square" aria-hidden="true"></i></button>
                                        <button onclick="window.location.href='/danh-muc/xac-nhan-xoa-{{this.category}}'" data-toggle="tooltip" title="" class="pd-setting-ed red" data-original-title="Xóa danh mục"><i class="fa fa-trash-alt" aria-hidden="true"></i></button>
                                    </td>
                                </tr>

                            {{/each}}
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>